<div id="blog" class="page section">
	<% @posts.each do |post| %>
		<% if post.published? %>
			<article class="post">
				<h1><%= post.title %></h1>
				<% if post.image? %>
					<img src="<%= image_path post.image %>" alt="<%= post.title %>"> 
				<% end %>
				<%= raw truncate post.content, length: 350 %>
				<p><%= link_to "read more...", post_path(post) %></p>
			</article>
		<% end %>
	<% end %>
</div>