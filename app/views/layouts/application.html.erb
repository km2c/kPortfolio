<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


  <title>Portfolio</title>
  <meta name="description" content="">
  <meta name="author" content="Kirk McCutcheon">

  <meta name="viewport" content="width=device-width,initial-scale=1">
  <!-- CSS -->

  <%= stylesheet_link_tag "application", :media => "all" %>


  <%= csrf_meta_tags %>

  <script src="js/modernizr-2.0.6.min.js"></script>
</head>

<body>

  <div id="container">
    <div id="main-left">
      <%= image_tag "logo.png", :class => "logo" =%>
      <ul id="nav">
        <li><%= link_to "Home", root_path, :class => 'home' %></li>
        <li><%= link_to "About", about_path, :class => 'about' %></li>
        <li><%= link_to "Resume", resume_path, :class => 'resume' %></li>
        <li><%= link_to "Work", work_path, :class => 'work' %></li>
        <li><%= link_to "Blog", blog_path, :class => 'blog' %></li>
        <li><%= link_to "Contact", contact_path, :class => 'contact' %></li>
        <% if user_signed_in? %>
          <li><%= link_to 'Posts', posts_path %></li>
          <li><%= link_to 'Categories', categories_path %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>

      <ul id="social">
        <li><a href="http://www.linkedin.com/in/kirkmcc" target="_blank" title="Linkedin"><%= image_tag "linkedin.png" %></a></li>
        <li><a href="http://forrst.com/people/Kmack" target="_blank" title="forrst"><%= image_tag "forrst.png" %></a></li>
        <li><a href="https://github.com/km2c" target="_blank" title="github"><%= image_tag "github.png" %></a></li>
      </ul>
    </div>
    <div class="clearfix"></div>
    <div id="main-right" role="main">
      <div id="user_nav">
      </div>
      <%= yield %>
    </div>
  </div> <!--! end of #container -->

  <%= javascript_include_tag "application" %>
  
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-7972287-4']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
</body>
</html>
